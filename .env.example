# TRITIUM-SC Configuration
# Copy this file to .env and fill in your values

# ===================
# APPLICATION
# ===================
APP_NAME=TRITIUM-SC
DEBUG=false

# ===================
# SERVER
# ===================
HOST=0.0.0.0
PORT=8000

# ===================
# PATHS
# ===================
# Where your NVR syncs recordings to
RECORDINGS_PATH=/path/to/your/recordings

# ===================
# DATABASE
# ===================
DATABASE_URL=sqlite+aiosqlite:///./tritium.db

# ===================
# NVR CONNECTION
# ===================
# Your NVR's IP address (Reolink compatible)
# NVR_HOST=192.168.1.xxx
# NVR_PORT=443
# NVR_USER=admin
# NVR_PASS=your_password_here

# ===================
# AI / DETECTION
# ===================
# Model to use (yolov8n.pt = nano, yolov8s.pt = small, etc.)
YOLO_MODEL=yolov8n.pt

# Minimum confidence for detections (0.0 - 1.0)
DETECTION_CONFIDENCE=0.5

# Motion detection threshold
MOTION_THRESHOLD=25.0

# ===================
# OLLAMA (LLM backend)
# ===================
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llava:13b

# ===================
# AMY AI COMMANDER
# ===================
AMY_ENABLED=true
# AMY_CAMERA_DEVICE=             # Auto-detects BCC950; set to override
AMY_DEEP_MODEL=llava:7b          # Multimodal vision model
AMY_CHAT_MODEL=gemma3:4b         # Chat/dialogue model
AMY_WHISPER_MODEL=large-v3       # STT model for whisper.cpp
AMY_TTS_ENABLED=true             # Enable Piper TTS
AMY_WAKE_WORD=amy                # Voice activation keyword
AMY_THINK_INTERVAL=8.0           # Seconds between thinking cycles

# ===================
# GEO REFERENCE
# ===================
# Real-world origin for the local coordinate system.
# All simulation/target coordinates are meters from this point.
# Set by geocoding your address or manually entering lat/lng.
# MAP_CENTER_LAT=37.7749        # Latitude (e.g. San Francisco)
# MAP_CENTER_LNG=-122.4194      # Longitude
# MAP_CENTER_ALT=0.0            # Meters above sea level

# ===================
# SIMULATION ENGINE
# ===================
SIMULATION_ENABLED=true           # Enable virtual target simulation
# SIMULATION_LAYOUT=             # Path to TritiumLevelFormat JSON file

# ===================
# MQTT DISTRIBUTED BUS
# ===================
MQTT_ENABLED=false                # Enable MQTT bridge for real hardware
MQTT_HOST=localhost               # MQTT broker hostname
MQTT_PORT=1883                    # MQTT broker port
MQTT_SITE_ID=home                 # Site identifier in topic prefix
# MQTT_USERNAME=                  # Optional broker authentication
# MQTT_PASSWORD=                  # Optional broker authentication

# ===================
# STREAMING
# ===================
# go2rtc integration for RTSP/WebRTC
GO2RTC_URL=http://localhost:1984
